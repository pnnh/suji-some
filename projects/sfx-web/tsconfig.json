{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "svelte"],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "node_modules/*"
      ]
    },
    "plugins": []
  },
  //"skipLibCheck": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages"
  ]
}
